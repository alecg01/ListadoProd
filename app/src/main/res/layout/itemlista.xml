<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp"
    tools:context=".MainActivity"
    android:backgroundTint="#FFE28C">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCodProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/louis_george_cafe_bold"
            android:gravity="center"
            android:text="0"
            android:textColor="#143d59"
            android:textSize="50sp"/>

        <TextView
            android:id="@+id/tvNombreProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/tvCodProd"
            android:layout_toRightOf="@id/tvCodProd"
            android:fontFamily="@font/louis_george_cafe_bold"
            android:text="Nombre"
            android:textColor="#143d59"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvPrecioProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNombreProd"
            android:layout_toEndOf="@id/tvCodProd"
            android:layout_toRightOf="@id/tvCodProd"
            android:text="0.00"
            android:textColor="#143d59"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="48dp"
                android:backgroundTint="#f4b41a"
                android:src="@drawable/ic_delete"
                android:text="Eliminar" />

            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#143d59"
                android:src="@drawable/ic_edit"
                android:text="Editar" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>